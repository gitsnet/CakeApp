<script>
    function InsertGroupId(that) {
        var flag = false;
        if ($(".grouplist").length > 1) {
            $(".grouplist").each(function () {
                if ($(that).val() == $(this).val() && $(this).attr("id") != $(that).attr("id")) {
                    flag = true;
                    return false;
                }
            });
        }
        if (flag) {
            alert($(that).children("option:selected").text() + " was already added.")
            $(that).val("");
        }

    }


    function resetFields(form) {
        $(':input', form).each(function () {
            var type = this.type;
            var tag = this.tagName.toLowerCase();
            if (type == 'text' || type == 'password' || tag == 'textarea' || type == 'file')
                this.value = "";

            else if (type == 'checkbox' || type == 'radio')
                this.checked = false;
            else if (tag == 'select')
                this.selectedIndex = 0;
        });


        var SizeID = $("#hdnSizeID").val();

        $.ajax({
            type: "GET",
            datatype: 'json',
            data: { id: SizeID },
            url: '@Url.Action("EditSize", "Size")',
            success: function (result) {
                console.log(result)

            },
            error: function (err) {
                $(document).trigger("add-alerts", {
                    message: err,
                    priority: "error"
                });
            }

        });

    }

    $('#btnCancel').click(function () {

        $('#editForm').trigger("reset")

        var SizeID = $("#hdnSizeID").val();
        var nRow = $(this).parents('tr')[0];
        $.ajax({
            type: "GET",
            datatype: 'json',
            data: { id: SizeID },
            url: '@Url.Action("EditInfo", "Info")',
            success: function (result) {
                console.log(result)

            },
            error: function (err) {
                $(document).trigger("add-alerts", {
                    message: err,
                    priority: "error"
                });
            }

        });

    });





    var SubmitForm = function () {
        var value = "";
        //$("#hdnGroupIDs").val("");
        //$(".grouplist").each(function () {
        //    if ($(this).val())
        //        value += $(this).val() + ",";
        //});
        //$("#hdnGroupIDs").val(value);


        $("#hdnGroupIDs").val("");
        $(".grouplist").each(function () {
            if ($(this).is(":checked"))
                value += $(this).val() + ",";
        });
        $("#hdnGroupIDs").val(value);

        $("#editForm").submit();
    }
    function AddRow(that) {
        var row = $(".clone_row:last-child");
        var thisRow = $(".clone_row:last-child").clone().appendTo('#more_cat');
        var lastDDlId = $(row).find("select").attr("id").split('_')[1];
        $(thisRow).find("select").attr("id", "ddlGroups_" + parseInt(parseInt(lastDDlId) + 1));
    }
    function DeleteRow(that) {
        if ($(".grouplist").length > 1)
            $(that).parent().parent().remove();
    }



</script>



